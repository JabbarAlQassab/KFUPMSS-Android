<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_blog"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_margin="6dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    cardview:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:id="@+id/cardview_blog_title_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/cardview_blog_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_toRightOf="@id/cardview_blog_title_text_id"
            android:maxLines="1"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/cardview_blog_subject_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject:"
            android:layout_below="@id/cardview_blog_title_text_id"/>

        <TextView
            android:id="@+id/cardview_blog_subject_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the subject"
            android:layout_below="@id/cardview_blog_title_id"
            android:layout_toRightOf="@id/cardview_blog_subject_text_id"
            android:maxLines="1"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/cardview_blog_writer_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Writer:"
            android:layout_below="@id/cardview_blog_subject_text_id"/>

        <TextView
            android:id="@+id/cardview_blog_writer_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John doe"
            android:layout_below="@id/cardview_blog_subject_text_id"
            android:layout_toRightOf="@id/cardview_blog_writer_text_id"/>

        <TextView
            android:textSize="16sp"
            android:id="@+id/cardview_blog_category_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_alignParentRight="true"/>

        <TextView
            android:text="01/01/2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>